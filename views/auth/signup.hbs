

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="pr-wrap">
                <div class="pass-reset">
                    <label>Enter the email you signed up with</label>
                    <input type="email" placeholder="Email" />
                    <input type="submit" value="Submit" class="pass-reset-submit btn btn-success btn-sm" />
                </div>
            </div>
        	
            <div class="wrap">
                <p class="form-title"> </p>
                <form class="login" action="/signup" method="POST">
                  <input type="text" name="name" placeholder="User" value="{{ user.name }}" />
                  {{#if errors.name }}
                    <p>{{ errors.name }}</p>
                  {{/if}}
                  
                  <input type="text" placeholder="Email" value="{{ user.email }}" />
                  {{#if errors.email}}
                    <p>{{ errors.email }}</p>
                  {{/if}}

                  <input type="password" placeholder="Password" />
                  {{#if errors.password}}
                    <p>{{ errors.password}}</p>
                  {{/if}}

                  <input type="number" placeholder="Age" min="18"/>
                  
                  <button type="submit" class="btn btn-default btn-sm">¡Únete!</button>
                  <input type="submit" value="Instagram" class="btn btn-default btn-sm" />
                  <div class="remember-forgot">
                    <div class="row">
                      <div class="col-xs-6">
                        <div class="checkbox">
                          <label>
                            <input type="checkbox" />
                            Remember Me
                          </label>
                        </div>
                      </div>
                      <div class="col-xs-6 forgot-pass-content">
                        <a href="javascription:void(0)" class="forgot-pass">Forgot Password</a>
                      </div>
                    </div>
                  </div>
                </form>
            </div>
			
        </div>
    </div>
    </div>