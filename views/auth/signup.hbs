<style>
  p {
    color: red
  }
</style>

<div class="row">
  <div class="col s12 m4 offset-m4">
    <div class="card">
      <div class="card-action pink darken-4 white-text">
        <h3>Sign Up Form</h3>
      </div>

      <form action="/users/signup" method="POST">
        <div class="card-content">
          <div class="form-field">

            <div class="input-field">
              <label><i class="material-icons left">face</i>Name</label>
              <input name="name" type="text" value="{{user.name}}" class="validate"> {{#if errors.name }}
              <p>{{ errors.name }}</p>
              {{/if}}
            </div>

            <div class="input-field">
              <label><i class="material-icons left">mail</i>Email</label>
              <input name="email" type="text" value="{{user.email}}" class="validate"> {{#if errors.email }}
              <p>{{ errors.email }}</p>
              {{/if}}
            </div>

            <div class="input-field">
              <label>Password</label>
              <input name="password" type="password" value="{{user.password}}" class="validate"> {{#if errors.password }}
              <p>{{ errors.password }}</p>
              {{/if}}
            </div>

            <div class="input-field">
              <label>Age</label>
              <input name="age" type="number" value="{{user.age}}" class="validate" min="18"> {{#if errors.age }}
              <p>{{ errors.age }}</p>
              {{/if}}
            </div> <br>

            <button class="btn-large waves-effect waves-dark pink darken-4" style="width:100%;">
              <i class="material-icons right">pets</i>Join & add Dog!</button>

          </div>
        </div>
    </div>
  </div>
  </form>

</div>