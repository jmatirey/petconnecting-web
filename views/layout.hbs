            <div class="right-content">
              {{#if currentUser}}
              <a href="/sessions/logout"><button>Logout</button></a>
              {{else}}
                <form class="formularioMolon" method="post" action="sessions/create">
                    <input type="text" name="email" placeholder="Email.." value="nikotomad@gmail.com"/> 
                    {{#if errors.email}}
                    <p>{{ errors.email }}</p>
                    {{/if}}
                    <input type="password" name="password" placeholder="Password.." value="1" />
                     {{#if errors.password}}
                    <p>{{errors.password}}</p>
                    {{/if}}
                    <button type="submit">Login</button>
                    <button type="submit"><a href="/users/signup">Sign up</a></button>
                </form>
              {{/if}}
            </div>
        </div>
    </div>
</div>

