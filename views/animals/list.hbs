<div class="container">

  <h1 style="margin-top: 60px">
    Your list</h1>
  <a href="/animals/create" class="btn btn-success">New Pet</a>


  <div class="row">
    {{#each animals }}

    <div class="card medium col s6 pink darken-4 white-text" style="width:260px; height: 600px">
      <img class="card-img-top" style="width:240px; height: 300px" src="{{ this.image }}" alt="Card image cap">
      <h5 class="card-title">{{ this.name }}</h5>
      <p class="card-text">Race:{{ this.race }}</p>
      <p class="card-text">Sex: {{ this.sex }}</p>
      <p class="card-text">Pedigree:{{ this.pedigree }}</p>
      <p class="card-text">{{ this.long }}</p>
      <p class="card-text">{{ this.lat }}</p>
      <p class="card-text">Postcode:{{ this.postcode }}</p>
      <hr>
      <a href="/animals/{{this._id}}/details" class="waves-effect waves-light btn">
        <i class="material-icons center">content_paste</i>
      </a>
      <a href="/animals/{{this._id}}/edit" class="waves-effect waves-light btn">
        <i class="material-icons center">edit</i>
      </a>

      <form style="margin-bottom: 20px" action="/animals/{{ this._id }}/delete" method="post">
        <button type="submit" class="waves-effect waves-light btn red" data-confirm="Are you sure?">
          <i class="material-icons center">delete</i>
        </button>
      </form>
    </div>
    {{/each}}
  </div>
</div>