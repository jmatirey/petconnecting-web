<div class="container">
  <h1>Users dogs</h1>

  <a href="/animals" class="waves-effect waves-light btn">Your list</a>



  {{#if user}}
  <h1>Hola, {{user.name}}</h1>
  {{/if}}
  <div class="row" style="margin-bottom: 120px">
    {{#each animals }}

    <div class="card medium col s1 pink darken-4 white-text" style="width:260px; height: 585px" data-lat="{{this.latitude}}"
      data-lng="{{this.longitude}}">
      <img class="card-img-top" style="width:240px; height: 300px" src="{{ this.image }}" alt="Card image cap">
      <h5 class="card-title">{{ this.name }}</h5>
      <p class="card-text">Race: {{ this.race }}</p>
      <p class="card-text">Sex: {{ this.sex }}</p>
      <p class="card-text">Pedigree: {{ this.pedigree }}</p>
      <p class="card-text">Postcode {{ this.postcode }}</p>

      <a href="/animals/{{this._id}}/details" class="waves-effect waves-light btn">
        <i class="material-icons center">content_paste</i>
      </a>
      </form>

      <form method="POST" action="/animals/userlist/{{ this._id }}/solicitar">
        <input type="hidden" name="id" value="{{this._id}}">
        <button class="btn btn-lg btn-info">Solicitar cruce</button>
      </form>
    </div>

    {{/each}} {{#if sentMail}} {{!--
    <div class="card">
      <p>Se ha mandado el mail correctamente! :)</p>
    </div> --}}
  </div>
  <script>alert('Se ha mandado bien el mail')</script> {{/if}}
</div>
</div>

  
